<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet id="create-table-revenue" author="George Niculae">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists schemaName="car-rental-service" catalogName="car-rental-service" tableName="revenue"/>
            </not>
        </preConditions>

        <createTable tableName="revenue">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="sum_of_amounts_for_car_rental" type="double">
                <constraints nullable="false"/>
            </column>
            <column name="daily_revenue" type="double">
                <constraints nullable="false"/>
            </column>
            <column name="weekly_revenue" type="double">
                <constraints nullable="false"/>
            </column>
            <column name="monthly_revenue" type="double">
                <constraints nullable="false"/>
            </column>
            <column name="yearly_revenue" type="double">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
