<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet id="create-table-user" author="George Niculae">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists schemaName="car-rental-service" catalogName="car-rental-service" tableName="car"/>
            </not>
        </preConditions>

        <sql>CREATE TYPE body_type_enum AS ENUM ('CHOOSE', 'HATCHBACK', 'SEDAN', 'SUV', 'COUPE', 'CONVERTIBLE', 'WAGON', 'VAN', 'JEEP')</sql>
        <sql>CREATE TYPE status_enum AS ENUM ('CHOOSE', 'NOT_AVAILABLE', 'BROKEN', 'IN_REPAIR', 'IN_SERVICE', 'AVAILABLE')</sql>

        <createTable tableName="car">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="amount" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="body_type" type="body_type_enum">
                <constraints nullable="false"/>
            </column>
            <column name="color" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="make" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="mileage" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="model" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="status_enum">
                <constraints nullable="false"/>
            </column>
            <column name="url_of_image" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="year_of_production" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="branch_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="branch_id"
                                 baseTableName="car"
                                 constraintName="fk_car_branch_id"
                                 referencedColumnNames="id"
                                 referencedTableName="branch"/>
    </changeSet>
</databaseChangeLog>
