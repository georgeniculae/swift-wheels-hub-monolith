<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet id="create-table-employee" author="George Niculae">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists schemaName="car-rental-service" catalogName="car-rental-service" tableName="employee"/>
            </not>
        </preConditions>

        <createTable tableName="employee">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="first_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="job_position" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="working_branch_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="working_branch_id"
                                 baseTableName="employee"
                                 constraintName="fk_employee_working_branch_id"
                                 referencedColumnNames="id"
                                 referencedTableName="working_branch"/>
    </changeSet>
</databaseChangeLog>
